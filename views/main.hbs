 <section class ="d-flex justify-content-center">
        <div class="card col-sm-6 p-3 mx-auto">
            <div class="mb-3">
                <h4>Carga de productos</h4>
            </div>
            <div class="mb-2">
                <form id="formulario" onsubmit="return addProduct()">
                    <div class="mb-2">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Nombre del producto.." required>
                    </div>
                    <div class="mb-2">
                        <label for="title">Price</label>
                        <input type="text" class="form-control" name="price" id="price" placeholder="Precio del producto.." required>
                    </div>
                    <div class="mb-2">
                        <label for="title">Thumbnail</label>
                        <input type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="URL foto del producto" required>
                    </div>
                    <div class="mb-2">
                        <button class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="bg-white mx-auto p-3 rounded">
            <div class="mb-3 mx-auto">
                <h2>Centro de mensajes</h2>
            </div>
            <form onsubmit="return addMsn()" >
                <input type="email" class="border border-secondary rounded" id="nb" placeholder="Email" required>
                <input type="text" class="border border-secondary rounded" id="msn" placeholder="Mensaje" required>
                <button class="btn btn-primary">Enviar</button>
            </form>
            <div id ="caja">
    
            </div>
        </div>
        
    </section> 
    
 <div>
    <h2 class="text-center">Lista de productos con HANDLEBARS</h2>
        <div class="container">
            <table class="table table-bordered table-striped text-center mt-4">
                 <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">TITLE</th>
                        <th scope="col">PRICE</th>
                        <th scope="col">THUMBNAIL</th>
                    </tr>
                </thead>
                <tbody class="bg-white" id="caja2">

                </tbody>
            </table>
        </div>
</div>
